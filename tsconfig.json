{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "declaration": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "moduleSuffixes": [
            ".es6",
            ""
        ],
        "noEmit": true,
        "paths": {
            "djblets/*": [".djblets/static/djblets/js/*"],
            "reviewboard/*": ["reviewboard/static/rb/js/*"]
        },
        "target": "ESNext"
    },
    "include": [
        "reviewboard/static/lib/js/**/*",
        "reviewboard/static/rb/js/**/*",
        ".djblets/static/djblets/js/**/*"
    ]
}
